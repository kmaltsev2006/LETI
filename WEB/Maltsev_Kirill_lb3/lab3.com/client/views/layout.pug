doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= title || 'Админ-панель социальной сети'
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet")
    link(rel="stylesheet" href="/css/styles.css")
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      .container-fluid
        a.navbar-brand(href="/") Админ-панель
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav
            li.nav-item
              a.nav-link(href="/" class=page === 'users' ? 'active' : '') Пользователи
            li.nav-item
              a.nav-link(href="/friends.html" class=page === 'friends' ? 'active' : '') Друзья
            li.nav-item
              a.nav-link(href="/news.html" class=page === 'news' ? 'active' : '') Новости

    .container.mt-4
      block content

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    block scripts

